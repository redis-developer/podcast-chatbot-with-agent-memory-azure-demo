{
  "name": "@podbot/root",
  "version": "1.0.0",
  "description": "PodBot - Chat API with Redis Agent Memory Server on Azure",
  "author": "Guy Royse <guy@guy.dev>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "web",
    "api"
  ],
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.6",
    "azure-functions-core-tools": "^4.2.2",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "dev": "npm-run-all --sequential build --parallel dev:api dev:web",
    "dev:api": "npm run dev --workspace=@podbot/api",
    "dev:web": "npm run dev --workspace=@podbot/web",
    "build": "npm-run-all --sequential build:api build:web",
    "build:api": "npm run build --workspace=@podbot/api",
    "build:web": "npm run build --workspace=@podbot/web"
  }
}
